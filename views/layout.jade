doctype html
html(ng-app="app")
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    block css
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='components/angular-chart.js/dist/angular-chart.css')
    block js
      script(src='components/angular/angular.min.js')
      script(src='components/Chart.js/Chart.min.js')
      script(src='components/angular-chart.js/dist/angular-chart.js')
      script(src='components/angular-socket-io/socket.js')
      script(src='components/angular-ui-router/release/angular-ui-router.js')
      script(src='js/app.js')
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
  body
    a(ui-sref='audiance') Audiance
    a(ui-sref='board') Board
    a(ui-sref='debug') Debug

    div(ui-view)
      block content
